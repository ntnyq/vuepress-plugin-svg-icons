{
  "name": "@goy/vuepress-plugin-svg-icons",
  "version": "5.1.0",
  "packageManager": "pnpm@7.2.1",
  "description": "SVG sprite icon plugin for VuePress",
  "keywords": [
    "vuepress-plugin",
    "vuepress",
    "svg-sprite-icon",
    "svg-sprite",
    "icon"
  ],
  "homepage": "https://vp-icon.goyfe.com",
  "bugs": {
    "url": "https://github.com/ntnyq/vuepress-plugin-svg-icons/issues"
  },
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ntnyq/vuepress-plugin-svg-icons.git"
  },
  "main": "lib/node/index.js",
  "types": "lib/node/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "rimraf lib *.tsbuildinfo",
    "copy": "copyfiles -a -u 1 -V src/**/*.{css,js} lib",
    "dev": "run-s clean dev:lib",
    "build": "run-s clean build:lib copy",
    "dev:lib": "tsc-watch -b tsconfig.build.json --onSuccess \"npm run copy\"",
    "build:lib": "tsc -b tsconfig.build.json",
    "dev:docs": "pnpm --filter=docs run dev",
    "build:docs": "pnpm --filter=docs run build",
    "lint": "run-p lint:*",
    "lint:script": "eslint .",
    "prepare": "husky install",
    "prepublishOnly": "run-s clean build typecheck lint",
    "typecheck": "tsc -p tsconfig.build.json --noEmit"
  },
  "peerDependencies": {
    "vuepress": "^2.0.0-beta.45"
  },
  "dependencies": {
    "svg-mixer": "^2.3.14"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^1.0.2",
    "@vuepress/client": "2.0.0-beta.48",
    "copyfiles": "^2.4.1",
    "eslint": "^8.17.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "npm-run-all": "^4.1.5",
    "pnpm": "^7.2.1",
    "rimraf": "^3.0.2",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.7.3",
    "vite": "^2.9.12",
    "vue": "^3.2.37",
    "vuepress": "^2.0.0-beta.48"
  },
  "lint-staged": {
    "*.{js,ts,yaml,yml,md,json}": "eslint --fix"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@ntnyq"
  },
  "eslintIgnore": [
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  }
}
