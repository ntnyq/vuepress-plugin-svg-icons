{
  "name": "@goy/vuepress-plugin-svg-icons",
  "version": "5.0.1",
  "description": "SVG sprite icon plugin for VuePress",
  "keywords": [
    "vuepress-plugin",
    "vuepress",
    "svg-sprite-icon",
    "svg-sprite",
    "icon"
  ],
  "homepage": "https://vp-icon.goyfe.com",
  "bugs": {
    "url": "https://github.com/ntnyq/vuepress-plugin-svg-icons/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ntnyq/vuepress-plugin-svg-icons.git"
  },
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "files": [
    "lib"
  ],
  "types": "lib/node/index.d.ts",
  "main": "lib/node/index.js",
  "scripts": {
    "clean": "rimraf lib *.tsbuildinfo",
    "copy": "copyfiles -a -u 1 -V src/**/*.{css,js} lib",
    "dev": "run-s clean dev:lib",
    "build": "run-s clean build:lib copy",
    "dev:lib": "tsc-watch -b tsconfig.build.json --onSuccess \"npm run copy\"",
    "build:lib": "tsc -b tsconfig.build.json",
    "dev:docs": "pnpm -C docs run dev",
    "build:docs": "npm -C docs run build",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc -p tsconfig.build.json --noEmit"
  },
  "lint-staged": {
    "*.{yml,md}": "prettier --write"
  },
  "dependencies": {
    "svg-mixer": "^2.3.14"
  },
  "prettier": "@ntnyq/prettier-config",
  "devDependencies": {
    "@ntnyq/prettier-config": "^0.3.1",
    "copyfiles": "^2.4.1",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "npm-run-all": "^4.1.5",
    "pnpm": "^7.0.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.6.4",
    "vite": "^2.9.8",
    "vue": "^3.2.33",
    "vuepress": "^2.0.0-beta.41"
  },
  "peerDependencies": {
    "vuepress": "^2.0.0-beta.41"
  },
  "publishConfig": {
    "access": "public"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "postcss"
      ]
    }
  }
}
