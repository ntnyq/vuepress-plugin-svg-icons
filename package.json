{
  "name": "@goy/vuepress-plugin-svg-icons",
  "type": "module",
  "version": "5.2.1",
  "packageManager": "pnpm@7.18.2",
  "description": "SVG sprite icon plugin for VuePress",
  "keywords": [
    "vuepress-plugin",
    "vuepress",
    "svg-sprite-icon",
    "svg-sprite",
    "icon"
  ],
  "homepage": "https://vp-icon.goyfe.com",
  "bugs": {
    "url": "https://github.com/ntnyq/vuepress-plugin-svg-icons/issues"
  },
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ntnyq/vuepress-plugin-svg-icons.git"
  },
  "main": "./lib/node/index.js",
  "types": "./lib/node/index.d.ts",
  "exports": {
    ".": "./lib/node/index.js",
    "./client": "./lib/client/index.js",
    "./*": "./*"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "run-s clean build:lib copy",
    "build:docs": "pnpm --filter=docs run build",
    "build:lib": "tsc",
    "clean": "rimraf lib *.tsbuildinfo",
    "copy": "copyfiles -a -u 1 -V src/**/*.{css,js} lib",
    "dev": "run-s clean dev:lib",
    "dev:docs": "pnpm --filter=docs run dev",
    "dev:lib": "tsc-watch --onSuccess \"npm run copy\"",
    "lint": "eslint .",
    "prepare": "husky install",
    "prepublishOnly": "run-s clean build typecheck lint",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "vuepress": "^2.0.0-beta.51"
  },
  "dependencies": {
    "svg-mixer": "^2.3.14"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^1.2.1",
    "@vuepress/client": "^2.0.0-beta.51",
    "copyfiles": "^2.4.1",
    "eslint": "^8.30.0",
    "husky": "^8.0.2",
    "nano-staged": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "pnpm": "^7.18.2",
    "rimraf": "^3.0.2",
    "tsc-watch": "^6.0.0",
    "typescript": "^4.9.4",
    "vite": "^4.0.2",
    "vue": "^3.2.45",
    "vuepress": "^2.0.0-beta.51"
  },
  "nano-staged": {
    "*.{js,ts,yaml,yml,md,json}": "eslint --fix"
  },
  "publishConfig": {
    "access": "public"
  }
}
